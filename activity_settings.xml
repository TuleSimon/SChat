<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F3F3"
    tools:context=".activity.Settings">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F0F3F3"
        android:fillViewport="true"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:id="@+id/setting_scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom2"
                android:clickable="false"
                android:paddingTop="22dp"
                android:text="Profile Options"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:textStyle="bold" />
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/profile_username_Cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:clipToPadding="true"
                android:focusable="auto"
                android:focusableInTouchMode="false"
                android:padding="10dp"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="25dp"
                app:cardForegroundColor="@color/transparent"
                app:cardUseCompatPadding="false"
                app:contentPadding="0dp"
                app:rippleColor="@color/colorPrimary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:drawableStart="@drawable/ic_person_low"
                        android:drawablePadding="10dp"
                        android:text="UserName"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:drawableTint="@color/colorPrimaryDark" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/profile_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:clickable="false"
                        android:drawableEnd="@drawable/ic_edit"
                        android:drawableTint="@color/colorPrimaryDark"
                        android:maxLines="2"
                        android:text="loading......."
                        android:textColor="#000000"
                        android:textSize="18sp"
                        app:drawableTint="@color/colorPrimaryDark" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/profile_about_you_Cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:clipToPadding="true"
                android:focusable="auto"
                android:focusableInTouchMode="false"
                android:padding="10dp"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="25dp"
                app:cardForegroundColor="@color/transparent"
                app:cardUseCompatPadding="false"
                app:contentPadding="0dp"
                app:rippleColor="@color/colorPrimary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:drawableStart="@drawable/ic_info_black_24dp"
                        android:drawablePadding="10dp"
                        android:text="About You"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:drawableTint="@color/colorPrimaryDark" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/profile_aboutYou"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:clickable="false"
                        android:drawableEnd="@drawable/ic_edit"
                        android:drawableTint="@color/colorPrimaryDark"
                        android:maxLines="2"
                        android:text="loading....."
                        android:textColor="#050505"
                        android:textSize="18sp"
                        app:drawableTint="@color/colorPrimaryDark" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/profile_status_Cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:clipToPadding="true"
                android:focusable="auto"
                android:focusableInTouchMode="false"
                android:padding="10dp"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="25dp"
                app:cardForegroundColor="@color/transparent"
                app:cardUseCompatPadding="false"
                app:contentPadding="0dp"
                app:rippleColor="@color/colorPrimary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:drawableStart="@drawable/ic_status_black_24dp"
                        android:drawablePadding="10dp"
                        android:text="Status"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:drawableTint="@color/colorPrimaryDark" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/profile_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:clickable="false"
                        android:drawableEnd="@drawable/ic_edit"
                        android:drawableTint="@color/colorPrimaryDark"
                        android:maxLines="2"
                        android:text="loading....."
                        android:textColor="#050505"
                        android:textSize="18sp"
                        app:drawableTint="@color/colorPrimaryDark" />

                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/profile_phonenumber_Cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:clipToPadding="true"
                android:focusable="auto"
                android:focusableInTouchMode="false"
                android:padding="10dp"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="25dp"
                app:cardForegroundColor="@color/transparent"
                app:cardUseCompatPadding="false"
                app:contentPadding="0dp"
                app:rippleColor="@color/colorPrimaryDark">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:drawableStart="@drawable/ic_local_phone_black_24dp"
                        android:drawablePadding="10dp"
                        android:text="Phone Number"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:drawableTint="@color/colorPrimaryDark" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/profile_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:clickable="false"
                        android:drawableEnd="@drawable/ic_edit"
                        android:drawableTint="@color/colorPrimaryDark"
                        android:maxLines="2"
                        android:text="loading....."
                        android:textColor="#050505"
                        android:textSize="18sp"
                        app:drawableTint="@color/colorPrimaryDark" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/profile_email_Cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:clipToPadding="true"
                android:focusable="auto"
                android:focusableInTouchMode="false"
                android:padding="10dp"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="25dp"
                app:cardForegroundColor="@color/transparent"
                app:cardUseCompatPadding="false"
                app:contentPadding="0dp"
                app:rippleColor="@color/colorPrimaryDark">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/settings_emailtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:drawableStart="@drawable/ic_email_black_24dp"
                        android:drawablePadding="10dp"
                        android:text="Email"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        app:drawableTint="@color/colorPrimaryDark" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/profile_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:clickable="false"
                        android:drawableTint="@color/colorPrimaryDark"
                        android:maxLines="2"
                        android:text="loading......"
                        android:textColor="#090909"
                        android:textSize="18sp"
                        android:visibility="gone"
                        app:drawableTint="@color/colorPrimaryDark" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/settings_change_profile_pix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/buttoncolors"
        android:text="Change Picture"
        android:textColor="@color/colorWhite"
        app:icon="@drawable/ic_camera"
        app:iconTint="@color/colorWhite"
        app:layout_anchor="@id/settingss_appbar"
        app:layout_anchorGravity="bottom|end">

    </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/settingss_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:foregroundTintMode="add"
            android:id="@+id/dashboardcollaspingtoolbar"
            app:collapsedTitleGravity="center|start"
            app:contentScrim="@color/colorPrimary"
            app:expandedTitleGravity="bottom"
            app:expandedTitleMarginBottom="15dp"
            app:expandedTitleMarginStart="6dp"
            app:expandedTitleTextAppearance="@style/large"
            app:layout_scrollFlags="snapMargins|scroll|enterAlways|exitUntilCollapsed|snap"
            app:title="My Profile"
            app:titleEnabled="true"
            app:toolbarId="@id/Settingstoolbar">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/settings_profileimage"
                    android:layout_width="match_parent"
                    android:layout_height="370dp"
                    android:layout_gravity="center|top"
                    android:fadingEdge="horizontal|vertical"
                    android:fadingEdgeLength="28dp"
                    android:foreground="@drawable/gradient"
                    android:transitionName="expandimage"
                    android:requiresFadingEdge="horizontal|vertical"
                    android:scaleType="fitXY"
                    android:src="@drawable/happy_woman"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ProgressBar
                    android:id="@+id/settings_uploadProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminateOnly="true"
                    android:indeterminateTint="@color/colorPrimary"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/Settingstoolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:gravity="start"
                android:splitMotionEvents="true"
                app:collapseIcon="@drawable/ic_accept_cr_group"
                app:layout_collapseMode="parallax"
                app:popupTheme="@style/Theme.AppCompat.Light.Dialog"
                app:subtitle="Simon Tule"
                app:titleTextColor="@color/colorWhite" />
        </com.google.android.material.appbar.CollapsingToolbarLayout>


    </com.google.android.material.appbar.AppBarLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>